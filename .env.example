# E-Dukaan E-Commerce Backend Configuration
# Copy this file to .env and fill in your actual values

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/e_dukaan_dev
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/e_dukaan_production

# JWT Secret - Use a strong, random secret key
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random

# Server Configuration
NODE_ENV=development
PORT=5000

# Stripe Configuration - Get these from your Stripe dashboard
STRIPE_SECRET_KEY=your_stripe_secret_key_from_dashboard
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_from_dashboard

# Frontend URLs - Update these to match your E-Dukaan frontend application
FRONTEND_SUCCESS_URL=http://localhost:3000/success
FRONTEND_CANCEL_URL=http://localhost:3000/cancel
FRONTEND_URL=http://localhost:3000

# Email Configuration
# For Gmail: Use App Password (not your regular password)
# Go to Google Account > Security > 2-Step Verification > App passwords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_FROM=your_email@gmail.com

# Alternative Email Providers:
# Outlook: smtp-mail.outlook.com (Port: 587)
# Yahoo: smtp.mail.yahoo.com (Port: 587 or 465)
# Custom SMTP: your_smtp_host (Port: 587 or 465)